<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.tetetete.client.ChatController">
    <children>
        <VBox spacing="10" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
            <TextArea fx:id="chatArea" editable="false" prefHeight="300.0" />
            <Label fx:id="userCountLabel" text="Users online: 0" />
            <HBox spacing="10">
                <TextField fx:id="messageField" promptText="Enter your message" HBox.hgrow="ALWAYS" />
                <Button fx:id="sendButton" text="Send" />
                <Button fx:id="logoutButton" text="Выйти" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
